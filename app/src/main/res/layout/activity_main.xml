<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MenuDrawer"
    android:layout_width="match_parent"
    android:background="@drawable/register"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="391dp"
            android:background="#56E040FB"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="For events as unique as you"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="451dp"
            android:background="#5E7C4DFF"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Fresh ideas for your event"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="510dp"
            android:background="#4D448AFF"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Make any occasion unforgettable"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="147dp"
            android:layout_height="114dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="118dp"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="673dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/frontlogo"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="49dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="569dp"
            android:background="#8F40C4FF"
            android:fontFamily="@font/abril_fatface"
            android:padding="10dp"
            android:text="Exclusive events, priceless memories !"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <Button
            android:id="@+id/event"
            android:layout_width="271dp"
            android:layout_height="109dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="244dp"
            android:background="@color/darkgrey"
            android:fontFamily="@font/aldrich"
            android:text="EVENTS"
            android:textColor="#F8F8F4"
            android:textSize="45sp" />

        <Button
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="109dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="91dp"
            android:background="@color/darkgrey"
            android:fontFamily="@font/aldrich"
            android:text="USER"
            android:textColor="#F6F4F4"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="82dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-black"
            android:text="Support us with your Feedback...!"
            android:textColor="@color/white"
            android:textStyle="bold" />



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemTextColor="@color/darkgrey"
        app:itemIconTint="@color/darkgrey"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>


